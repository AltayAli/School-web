@{
    Layout = "_LoginLayout";
}
@model PasswordChangeViewModel

<div class="card m-3  w-25  m-auto">
    <div class="card-header header-elements-inline">
        <h5 class="card-title"><i class="icon-user mr-2"></i> Giriş</h5>
        <div class="header-elements">
            <div class="list-icons">
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="ChangePassword">
            <div class="row">
                <div class="col-md-12">
                    <fieldset>


                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Username:</label>
                                    <input asp-for="UserName" placeholder="Username" class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Parol:</label>
                                    <input asp-for="OldPassword" type="password" placeholder="Köhnə Parol" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Parol:</label>
                                    <input asp-for="NewPassword" type="password" placeholder="Yeni Parol" class="form-control">
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>

            <div class="text-right">
                <button type="submit" class="btn btn-primary">Giriş <i class="icon-paperplane ml-2"></i></button>
            </div>
        </form>
    </div>
</div>


