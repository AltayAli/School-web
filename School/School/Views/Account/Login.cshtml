@{
    Layout = "_LoginLayout";
}
@model LoginViewModel


<div class="container pt-sm-3 pt-md-5">
        <div class="row pt-sm-3  pt-md-5">
            <div class="col-12 h-100 col-sm-12 col-md-7 d-md-block d-none">
                <img src="~/images/Aztu.png" class="w-75 ml-md-5"/>
            </div>
            <div class="h-auto col-12 col-md-5">
                <div class="row">
                    <div class="card m-auto  col-12 col-sm-6 col-md-12">
                        <div class="card-header header-elements-inline">
                            <h5 class="card-title"><i class="icon-user mr-2"></i> Giriş</h5>
                            <div class="header-elements">
                                <div class="list-icons">
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <form asp-action="Login">
                                <div class="row">
                                    <div class="col-md-12">
                                        <fieldset>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>Username:</label>
                                                        <input asp-for="UserName" placeholder="Username" class="form-control">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>Parol:</label>
                                                        <input asp-for="Password" type="password" placeholder="Parol" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>

                                <div class="text-right">
                                    <button type="submit" class="btn btn-primary">Giriş <i class="icon-paperplane ml-2"></i></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
     </div>



