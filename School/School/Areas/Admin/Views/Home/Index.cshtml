@{
    ViewData["Title"] = "Home";
}

@section Header {
    @*Page header*@
    <div class="page-header page-header-light mb-2">
        <div class="page-header-content header-elements-md-inline">
            <div class="page-title d-flex">
                <h4><i class="icon-box-add mr-2 icon-2x"></i> <span class="font-weight-semibold" id="title"></span></h4>
                <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>
            <div class="header-elements d-none">
                <div class="d-flex justify-content-center">

                    <a href="#" class="btn btn-link btn-float text-default" id="edit-link"><span class="text-primary icon-font-size-1-5-rem pt-0"><i class="far fa-edit"></i></span> <span>Edit</span></a>

                    <a href="#" class="btn btn-link btn-float text-default" id="create-link"><span class="text-primary icon-font-size-1-5-rem pt-0"><i class="far fa-plus-square"></i></span> <span>Create</span></a>
                    <a href="#" class="btn btn-link btn-float text-default" id="detail-link"><span class="text-primary icon-font-size-1-5-rem pt-0"><i class="fas fa-info-circle"></i></span> <span>Info</span></a>

                </div>
            </div>
        </div>
    </div>
    @*/page header*@
}
<!--Page modal-->



<div class="card" id="mainCard">

    <div class="card-body">
        <div id="popup">
        </div>
        <div id="body"></div>
    </div>
</div>

@section Styles{
    <link href="~/cdn.css/dx.common.css" rel="stylesheet" />
    <link href="~/cdn.css/dx.material.blue.light.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/cdn.js/jszip.min.js"></script>
    <script src="~/cdn.js/dx.all.js"></script>
    <script src="~/cdn.js/dx.aspnet.data.min.js"></script>
    <script src="~/cdn.js/dx.aspnet.mvc.js"></script>
    <script src="~/cdn.js/devextreme-intl.min.js"></script>
    <script src="~/ui.js/home.js" type="module"></script>
}

